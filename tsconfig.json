{
  "compilerOptions": {
    "target": "es2016",                                  
    "module": "commonjs",                                
    "typeRoots": ["./node_modules/@types", "./src/@types"],                                  
    "sourceMap": true,                                
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true,
    "resolveJsonModule": true,
  }
}
